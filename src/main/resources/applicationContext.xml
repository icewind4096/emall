<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.2.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <!-- 基于上下文扫描组件 扫描所以的bean，但是排除controller注解的包，把扫描controller的责任交给springmvc配置文件dispatcher-servlet.xml-->
    <context:component-scan base-package="com.windvalley.emall" annotation-config="true">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <aop:aspectj-autoproxy/>

    <!-- 分离SpringMVC的配置 -->

    <!-- 数据源配置 -->
    <import resource="applicationContext-datasource.xml"/>
    <!-- spring session配置
    <import resource="applicationContext-session.xml"/>
    -->
</beans>